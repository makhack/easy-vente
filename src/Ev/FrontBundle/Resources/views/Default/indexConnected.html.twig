{% extends "EvFrontBundle:Default:base.html.twig" %}

{% block body %}

    <section id="featured">
	<!-- start slider -->
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
                            
                {% for flashMessage in app.session.flashbag.get('fail') %}
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                            
	<!-- Slider -->
        <div id="main-slider" class="flexslider">
            <ul class="slides">
              
        {% for slide in slides %}
            <li>
                <img src=" {{asset( slide.lien )}}" alt="{{ slide.nom }}"/>
            </li>
        {% endfor %}
                
            </ul>
        </div>
	<!-- end slider -->
			</div>
		</div>
	</div>	
    </section>
    
    <section id="content">
	<div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Nos prochaines ventes</h4>
                                    <div class="icon">
                                        <i class="fa fa-clock-o fa-3x"></i>
                                    </div>
                                    <p>Voluptatem accusantium doloremque laudantium sprea totam rem aperiam.</p>
                                </div>
                                <div class="box-bottom">
                                    <a href="{{ path('ev_front_events') }}">Learn more</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Nos produits stars</h4>
                                    <div class="icon">
                                        <i class="fa fa-star fa-3x"></i>
                                    </div>
                                    <p>Voluptatem accusantium doloremque laudantium sprea totam rem aperiam.</p>
                                </div>
                                <div class="box-bottom">
                                    <a href="{{ path('ev_front_best') }}">Learn more</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Newsletter / Alertes</h4>
                                    <div class="icon">
                                        <i class="fa fa-envelope fa-3x"></i>
                                    </div>
                                    <p>Voluptatem accusantium doloremque laudantium sprea totam rem aperiam.</p>
                                </div>
                                <div class="box-bottom">
                                    <a href="{{ path('ev_front_register_newsletter', { 'idUser' : 5 }) }}">Learn more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
	</div>
    </section>
    
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#myModal').modal();
        });
    </script>
{% endblock %}